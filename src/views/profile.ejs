<script>
  var dataSource;
  var myChart, myChart2;
  $(document).ready(function () {

    $(".show-profile-details").click(function () {
      openLoading("<h4>Loading details ...</h4>");

      fetch("/accountDetails", {
        method: "POST",
        headers: {
          Accept: "application/json",
          "Content-Type": "application/json",
          "CSRF-Token": Cookies.get("XSRF-TOKEN"),
        },
        body: JSON.stringify({
          uid: "<%= uid %>"
        })
      })
      .then(response => response.json())
      .then((response) => {
        $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(2) > div > input").val(response.uid);
        $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(4) > div > input").val(response.fullName);
        $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(5) > div > input").val(response.email);
        $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(7) > div > input").val(response.city);
        $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(8) > div > input").val(response.postalCode);
        (response.isAdmin) ? $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(3) > div > input").val('Administrator') : $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(3) > div > input").val('User');
        (response.isAdmin) ? $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(6) > div > input").val('verified') : $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(6) > div > input").val('need verification');
        
        closeLoading();
        $('#accountDetailsModal').modal('show');
      })
    });

    dataSource = new kendo.data.DataSource({
        transport: {
            read: {
              url: "/getUsers",
              dataType: "json"
            }
        },
        schema: {
                model: {
                    fields: {
                        uid_firebase: {
                          field: 'uid',
                          type: "string", 
                          parse: function (response) {
                            return response;
                          } 
                        },
                        emailVerified: { type: "bit" },
                        disabled: { type: "bit" },
                        displayName: { type: "string" },
                        metadata: { defaultValue: {} },
                        creationTime: {
                          field: "metadata.creationTime",
                          parse: function (response) {
                            return new Date(response);
                          }
                        },
                        lastSignInTime: {
                          from: "metadata.lastSignInTime",
                          parse: function (response) {
                            return new Date(response);
                          }
                        }
                    }
                }
            },
        pageSize: 20,
        requestEnd: function (e) {
          if (e.type === "read" && e.response) {
            if (e.response.length > 0) {
              $("#totalUsers_record").html(e.response.length);
            } else {
              swal({
                  icon: 'warning',
                  title: 'No results',
                  type: "warning",
                  confirmButtonClass: "btn-warning",
                  confirmButtonText: "OK"
              });
            }
          }
        }
    });

    function toggleScrollbar(e) {
        let gridWrapper = e.sender.wrapper, gridTable = e.sender.table, gridArea = gridTable.closest(".k-grid-content");
        gridWrapper.toggleClass("no-scrollbar", gridTable[0].offsetHeight < gridArea[0].offsetHeight)
    };

    $("#grid").kendoGrid({
      toolbar: [
          { text: "Export to PDF", className: "k-grid-pdf toolbar-style", id: "pdf" },
          { text: "Export to Excel", className: "k-grid-excel toolbar-style", id: "excel" }
      ],
      pdf: {
          fileName: "Reciclame_Export.pdf",
          allPages: !0,
          avoidLinks: !0,
          paperSize: "A4",
          margin: { right: "0.4cm", top: "1cm", bottom: "1cm", left: "0.4cm"},
          landscape: !0,
          repeatHeaders: !0,
          template: $("#page-template").html(),
          scale: 0.4,
      },
      dataSource: dataSource,
      sortable: !0,
      height: 550,
      pageable: {
        refresh: !1,
        info: !1,
        pageSizes: [5, 10, 15, 20, "all"],
        messages: {
                empty: "No users",
                itemsPerPage: "Users for page",
                previous: "Previous",
                next: "Next",
                first: "First",
                last: "Last"
            }
      },
      dataBound: function (e) {
        this.autoFitColumn(0);
        this.autoFitColumn(1);
        this.autoFitColumn(2);
        this.autoFitColumn(3);
        this.autoFitColumn(4);
        this.autoFitColumn(5);
        toggleScrollbar(e);

        $(".show-account-details").click(function () {
          
          openLoading("<h4>Loading details ...</h4>");

          fetch("/accountDetails", {
            method: "POST",
            headers: {
              Accept: "application/json",
              "Content-Type": "application/json",
              "CSRF-Token": Cookies.get("XSRF-TOKEN"),
            },
            body: JSON.stringify({
              uid: $(this).data('uid')
            })
          })
          .then(response => response.json())
          .then((response) => {
            $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(2) > div > input").val(response.uid);
            $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(4) > div > input").val(response.fullName);
            $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(5) > div > input").val(response.email);
            $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(7) > div > input").val(response.city);
            $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(8) > div > input").val(response.postalCode);
            (response.isAdmin) ? $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(3) > div > input").val('Administrator') : $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(3) > div > input").val('User');
            (response.isAdmin) ? $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(6) > div > input").val('verified') : $("#accountDetailsModal > div > div > div.modal-body > div:nth-child(6) > div > input").val('need verification');
            
            closeLoading();
            $('#accountDetailsModal').modal('show');
          })
        });

        $(".delete-user").click(function () {
          swal.fire({
            icon: "warning",
            showConfirmButton: true,
            showCancelButton: true,
            html: '<h4>Are you sure?</h4>',
            confirmButtonText: 'Yes, I am sure!',
            cancelButtonText: "No, cancel it!",
          }).then((result) => {
            if(result.isConfirmed) {
              openLoading("<h4>Deleting user ...</h4>");
              fetch("/deleteUser", {
                method: "POST",
                headers: {
                  Accept: "application/json",
                  "Content-Type": "application/json",
                  "CSRF-Token": Cookies.get("XSRF-TOKEN"),
                },
                body: JSON.stringify({
                  uid: $(this).data('uid')
                })
              })
              .then(() => {
                $("#grid").data("kendoGrid").dataSource.read();
                closeLoading();
                successAlert('<h4>User deleted successfully</h4>')
              })
              .catch((error) => {
                errorAlert('<h4>Something wrong ocurred</h4><h6>' + error.message + '</h6>');
              });
            }
          });
        });

        $(".disabled-firebase").click(function () {
          let disabled = $(this).data("disabled");
          if(disabled) {
            openLoading("<h4>Enabling user ...</h4>");
          } else {
            openLoading("<h4>Disabling user ...</h4>");
          }
          fetch("/disabledUser", {
            method: "POST",
            headers: {
              Accept: "application/json",
              "Content-Type": "application/json",
              "CSRF-Token": Cookies.get("XSRF-TOKEN"),
            },
            body: JSON.stringify({
              disabled: !disabled,
              uid: $(this).data('uid')
            })
          })
          .then(() => {
            closeLoading();
            successAlert('<h4>User updated successfully</h4>')
            $("#grid").data("kendoGrid").dataSource.read();
          })
          .catch((error) => {
            errorAlert('<h4>Something wrong ocurred</h4><h6>' + error.message + '</h6>');
          });
        });

        $(".verify-firebase").click(function () {

          openLoading("<h4>Verifying user ...</h4>");
          fetch("/verifyEmail", {
            method: "POST",
            headers: {
              Accept: "application/json",
              "Content-Type": "application/json",
              "CSRF-Token": Cookies.get("XSRF-TOKEN"),
            },
            body: JSON.stringify({
              uid: $(this).data('uid')
            })
          })
          .then(() => {
            closeLoading();
            successAlert('<h4>User verified successfully</h4>')
            $("#grid").data("kendoGrid").dataSource.read();
          })
          .catch((error) => {
            errorAlert('<h4>Something wrong ocurred</h4><h6>' + error.message + '</h6>');
          });
        });
      },
      columns: [
        {
          field: "uid_firebase",
          title: "UID"
        },
        {
          field: "email",
          title: "Email"
        },
        {
          field: "emailVerified",
          title: "Email verified",
          template: "#if(emailVerified) {# <i class='fas fa-check'></i>#} else {#<i class='fas fa-times'></i>#}#"
        },
        {
          field: "disabled",
          title: "Enabled",
          template: "#if(!disabled) {# <i class='fas fa-check'></i>#} else {#<i class='fas fa-times'></i>#}#"
        },
        {
          field: "creationTime",
          title: "Creation time",
          format: "{0:dd/MM/yyyy - HH:mm}"
        },
        {
          field: "lastSignInTime",
          title: "LastSignIn time",
          format: "{0:dd/MM/yyyy - HH:mm}",
        },
        {
          title: "Actions",
          template: "<button class='btn btn-info show-account-details mr-2' data-uid='#= uid_firebase#'>Details</button>#if(!emailVerified) {# <button class='btn btn-info verify-firebase mr-2' data-uid='#= uid_firebase#'>Verify</button> #}##if(disabled) {# <button class='btn btn-warning disabled-firebase mr-2' data-disabled='#= disabled#'  data-uid='#= uid_firebase#'>Enable</button>#} else {# <button class='btn btn-warning disabled-firebase mr-2' data-disabled='#= disabled#'  data-uid='#= uid_firebase#'>Disable</button> #}#<a class='btn btn-danger delete-user' type='button' data-uid='#= uid_firebase#'>Delete</a>"
        }
      ]
    });

    dataSource.bind("error", function(e) {
      console.log("Error dataSource /getUsers: " + e);
    });

    let grid = $("#grid");
    grid.find(".k-grid-toolbar").insertAfter($("#grid .k-pager-sizes.k-label"));

    document
      .getElementById("update-credentials-form")
      .addEventListener("submit", (event) => {
        event.preventDefault();

        openLoading("<h4>Updating credentials ...</h4>");

        const email = event.target.email.value,
          password = event.target.password.value,
          confirmPassword = event.target.confirmPassword.value;

          if(password == confirmPassword) {
            fetch("/updateCredentials", {
              method: "POST",
              headers: {
                Accept: "application/json",
                "Content-Type": "application/json",
                "CSRF-Token": Cookies.get("XSRF-TOKEN"),
              },
              body: JSON.stringify({
                  'email': email,
                  'password': password, //CryptoJS.MD5(password),
                  'confirmPassword': confirmPassword //CryptoJS.MD5(confirmPassword)
              }),
            })
            .then(() => {
              successAlert('<h4>User credentials updated successfully</h4>');
              window.location.assign('/profile');
            })
            .catch(error => {
              console.log(error);
              errorAlert('<h4>Something wrong ocurred</h4><h6>' + error.message + '</h6>');
            });
          }
          else {
            console.log("Both passwords must be equals");

          }
    });

    $("#user-show-data").click(function () {
      $("#other-data").hide();
      $("#user-data").show();
    });

    $(".show-other-data").click(function() {
      $("#user-data").hide();
      $("#other-data").show();
    });

    $("#show_stats").click(function () {
      $("#records").hide();
      $("#stats").show();
      var ctx = document.getElementById('myChart');
      var ctx2 = document.getElementById('myChart2');
      var timeFormat = 'DD/MM/YYYY';

      if(myChart != undefined) {
        myChart.destroy();
      }

      var myChart = new Chart(ctx, {
        type: 'line',
        data: {
          datasets: [{
            label: "Creation Time",
            fill: false,
            borderColor: 'rgba(54, 162, 235, 1)',
