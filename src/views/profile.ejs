          <label for="city" class="col-sm-4 col-form-label">City</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" name="city" disabled value="" />
          </div>
        </div>
        <div class="form-group row">
          <label for="postalCode" class="col-sm-4 col-form-label">Postal code</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" name="postalCode" disabled value="" />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

