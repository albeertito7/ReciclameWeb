<body>
  <%- include('partials/navigation.html') -%>
  <div class="container-fluid m-5" >
    <section class="mb-4">
      <div class="row">
        <div class="col-sm-2" style="text-align: center;;">
          <div class="avatar mx-auto white" data-aos="fade-right" data-aos-duration="500"><img style="max-width: 150px !important;  -webkit-box-shadow: 0px 0px 14px -1px rgba(0,0,0,0.44); -moz-box-shadow: 0px 0px 14px -1px rgba(0,0,0,0.44); box-shadow: 0px 0px 14px -1px rgba(0,0,0,0.44);" src="/img/anonymous.jpg" class="rounded-circle" alt="Sample avatar image."></div>
        </div>
        <div class="col-sm-8" style="display: flex; flex-direction: column; align-items: flex-start; justify-content: center;">
          <div style="font-weight: bold; font-size: 18px;"><%= fullName %><%- (!emailVerified) ? "<i class='fa fa-check ml-2' aria-hidden='true'></i>" : "" -%></div>
          <div style="color: grey;">#<%= uid %></div>
          <hr>
          <div>
            <a class="btn btn-success mr-2" type="button" data-toggle="modal" data-target="#accountDetailsModal">Account details</a>
            <a class="btn btn-danger mr-2" type="button" data-toggle="modal" data-target="#updateCredentialsModal">Update credentials</a>
            <a class="btn btn-primary" href="/editProfile">Edit profile</a>
            <a class="btn btn-primary mr-2" href="/createUser">Create user</a>
            <a class="btn btn-secondary" href="/sessionLogout">Log out</a>
          </div>
        </div>
      </div>
      <hr style="width: 70% !important;">
      <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8" style="display: flex;">
          <div style="margin-right: 2%;"><span style="font-weight: bold;">Total users: </span> <%= totalUsers %></div>
          <div><span style="font-weight: bold;">Admin users: </span> <%= adminUsers %></div>
        </div>
      </div>
      <!--<div class="row">
        <div class="col-sm-2"></div>
