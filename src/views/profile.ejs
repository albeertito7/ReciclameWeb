        <div class="col-sm-5 d-flex align-items-center">
          <canvas id="myChart2" width="300" height="180"></canvas>
        </div>
      </div>
      <div id="records" class="row">
        <div id="wrapper_grid" class="col">
          <div id="grid"></div>
        </div>
      </div>
      </div>
      <div id="other-data" style="display: none; width: 100%;"></div>
    </section>
  </div>
</body>
